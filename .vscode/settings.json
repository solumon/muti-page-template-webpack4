{
    /// ESLint
    "eslint.validate": [
        "javascript",
        "vue"
    ],
    /// ------------
    /// Stylelint
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "stylelint.validate": [
        "css", 
        "scss",
        "vue"
    ],
    /// ------------
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true
    },
    "cSpell.words": [
        "stylelint",
        "purifycss",
        "filesize",
        "echarts",
        "videojs",
        "flipui"
    ]
}
